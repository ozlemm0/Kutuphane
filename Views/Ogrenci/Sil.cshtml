@model Ogrenci

@{
    ViewData["Title"] = "Öğrenci Silme Onayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Öğrenci Silme Onayı</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">Bu öğrenciyi silmek istediğinizden emin misiniz?</h4>
                    
                    <div class="alert alert-warning">
                        <strong>Öğrenci Bilgileri:</strong>
                        <p>Ad Soyad: @Model.OgrenciAdi @Model.OgrenciSoyadi</p>
                        <p>Okul Numarası: @Model.OkulNumarasi</p>
                        <p>Sınıf: @Model.Sinif?.SinifAdi</p>
                    </div>
                    
                    <form asp-action="Sil" method="post">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger me-2">Evet, Sil</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>