@model Kutuphane.Models.Ogrenci

@{
    ViewData["Title"] = "Öğrenci Sil";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Öğrenci Sil</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Öğrenci Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5>Bu öğrenciyi silmek istediğinizden emin misiniz?</h5>
                <p>Bu işlem geri alınamaz ve öğrencinin tüm ödünç kayıtları etkilenecektir.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-2">Adı</dt>
                <dd class="col-sm-10">@Model.OgrenciAdi</dd>

                <dt class="col-sm-2">Soyadı</dt>
                <dd class="col-sm-10">@Model.OgrenciSoyadi</dd>

                <dt class="col-sm-2">Okul Numarası</dt>
                <dd class="col-sm-10">@Model.OkulNumarasi</dd>

                <dt class="col-sm-2">Sınıf</dt>
                <dd class="col-sm-10">@Model.Sinif?.SinifAdi</dd>

                @if (Model.OduncKitaplar != null && Model.OduncKitaplar.Any())
                {
                    <dt class="col-sm-2">Teslim Edilmemiş Kitap</dt>
                    <dd class="col-sm-10">@Model.OduncKitaplar.Count(o => !o.TeslimDurumu)</dd>
                }
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>
            </form>
        </div>
    </div>
</div>