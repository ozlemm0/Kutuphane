@model Kutuphane.Models.Kategori

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Kategori Sil</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Kategori Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5>Bu kategoriyi silmek istediğinizden emin misiniz?</h5>
                <p>Bu işlem geri alınamaz ve kategoriye ait tüm kitaplar etkilenecektir.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-2">Kategori Adı</dt>
                <dd class="col-sm-10">@Model.KategoriAdi</dd>

                <dt class="col-sm-2">Açıklama</dt>
                <dd class="col-sm-10">@Model.Aciklama</dd>

                @if (Model.Kitaplar != null && Model.Kitaplar.Any())
                {
                    <dt class="col-sm-2">Kitap Sayısı</dt>
                    <dd class="col-sm-10">@Model.Kitaplar.Count</dd>
                }
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>
            </form>
        </div>
    </div>
</div> 