@model Kutuphane.Models.Kategori

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Kategori Silme Onayı</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">Bu kategoriyi silmek istediğinizden emin misiniz?</h4>
                    
                    <div class="alert alert-warning">
                        <strong>Kategori Bilgileri:</strong>
                        <p>Kategori Adı: @Model.KategoriAdi</p>
                        <p>Açıklama: @Model.Aciklama</p>
                    </div>
                    
                    <form asp-action="Sil" method="post">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger me-2">Evet, Sil</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 