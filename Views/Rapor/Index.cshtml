@model Kutuphane.Models.ViewModels.RaporViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">
                        <i class="bi bi-graph-up me-2"></i>Kütüphane Raporları
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-people me-2"></i>En Çok Okuyan Öğrenciler
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Okuma Sayısı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sirano = 1;
                                }
                                @foreach (var item in Model.EnCokOkuyanOgrenciler)
                                {
                                    <tr>
                                        <td>@sirano</td>
                                        <td>@item.AdSoyad</td>
                                        <td>
                                            <span class="badge bg-primary">@item.OkumaSayisi</span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Index", "Rapor", new { secilenOgrenciId = item.OgrenciId })" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye me-1"></i>Detay
                                            </a>
                                        </td>
                                    </tr>
                                    sirano++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-book me-2"></i>En Çok Okunan Kitaplar
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Kitap Adı</th>
                                    <th>Yazar</th>
                                    <th>Okunma Sayısı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    sirano = 1;
                                }
                                @foreach (var item in Model.EnCokOkunanKitaplar)
                                {
                                    <tr>
                                        <td>@sirano</td>
                                        <td>@item.KitapAdi</td>
                                        <td>@item.Yazar</td>
                                        <td>
                                            <span class="badge bg-success">@item.OkunmaSayisi</span>
                                        </td>
                                    </tr>
                                    sirano++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-arrow-left-right me-2"></i>Ödünç Verilen Kitaplar
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Kitap Adı</th>
                                    <th>Öğrenci</th>
                                    <th>Ödünç Alma Tarihi</th>
                                    <th>Teslim Tarihi</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    sirano = 1;
                                }
                                @foreach (var item in Model.OduncVerilenKitaplar)
                                {
                                    <tr>
                                        <td>@sirano</td>
                                        <td>@item.KitapAdi</td>
                                        <td>@item.OgrenciAdSoyad</td>
                                        <td>@item.OduncAlmaTarihi.ToString("dd.MM.yyyy")</td>
                                        <td>@(item.TeslimTarihi?.ToString("dd.MM.yyyy") ?? "-")</td>
                                        <td>
                                            <span class="badge @(item.TeslimDurumu ? "bg-success" : "bg-warning")">
                                                @(item.TeslimDurumu ? "Teslim Edildi" : "Teslim Edilmedi")
                                            </span>
                                        </td>
                                    </tr>
                                    sirano++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.SecilenOgrenciId.HasValue)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-person me-2"></i>@Model.SecilenOgrenciAdSoyad - Okunan Kitaplar
                        </h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Kitap Adı</th>
                                        <th>Ödünç Alma Tarihi</th>
                                        <th>Teslim Tarihi</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        sirano = 1;
                                    }
                                    @foreach (var item in Model.SecilenOgrencininKitaplari)
                                    {
                                        <tr>
                                            <td>@sirano</td>
                                            <td>@item.KitapAdi</td>
                                            <td>@item.OduncAlmaTarihi.ToString("dd.MM.yyyy")</td>
                                            <td>@(item.TeslimTarihi?.ToString("dd.MM.yyyy") ?? "-")</td>
                                            <td>
                                                <span class="badge @(item.TeslimDurumu ? "bg-success" : "bg-warning")">
                                                    @(item.TeslimDurumu ? "Teslim Edildi" : "Teslim Edilmedi")
                                                </span>
                                            </td>
                                        </tr>
                                        sirano++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
