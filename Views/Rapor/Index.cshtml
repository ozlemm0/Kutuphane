@model Kutuphane.Models.ViewModels.RaporViewModel

@{
    ViewData["Title"] = "Raporlar";
}

<style>
    .card {
        transition: transform 0.2s ease-in-out;
        cursor: pointer;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .card-body {
        padding: 1.5rem;
    }
    
    .card-title {
        margin-bottom: 0;
        font-size: 1.1rem;
    }
</style>

<div class="container mt-4">
    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Hata"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Öğrenci Kitap Listesi</h4>
                </div>
                <div class="card-body">
                    <form asp-action="OgrencininKitaplari" method="get" class="row g-3">
                        <div class="col-md-8">
                            <label for="ogrenciId" class="form-label">Öğrenci Seçin</label>
                            <select name="ogrenciId" id="ogrenciId" class="form-select" required>
                                <option value="">Öğrenci Seçiniz...</option>
                                @if (ViewBag.Ogrenciler != null)
                                {
                                    @foreach (var item in ViewBag.Ogrenciler)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Kitapları Listele
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Kitabı Okuyan Öğrenciler</h4>
                </div>
                <div class="card-body">
                    <form asp-action="KitabiOkuyanOgrenciler" method="get" class="row g-3">
                        <div class="col-md-8">
                            <label for="kitapId" class="form-label">Kitap Seçin</label>
                            <select name="kitapId" id="kitapId" class="form-select" required>
                                <option value="">Kitap Seçiniz...</option>
                                @if (ViewBag.Kitaplar != null)
                                {
                                    @foreach (var item in ViewBag.Kitaplar)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-users"></i> Öğrencileri Listele
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>Raporlar
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card text-decoration-none mb-3">
                                <a href="@Url.Action("EnCokOkuyanOgrenciler", "Rapor")" class="text-decoration-none">
                                    <div class="card-body bg-primary text-white rounded">
                                        <h5 class="card-title">
                                            <i class="bi bi-book me-2"></i>En Çok Kitap Okuyan Öğrenciler
                                        </h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-decoration-none mb-3">
                                <a href="@Url.Action("EnCokOkunanKitaplar", "Rapor")" class="text-decoration-none">
                                    <div class="card-body bg-success text-white rounded">
                                        <h5 class="card-title">
                                            <i class="bi bi-book me-2"></i>En Çok Okunan Kitaplar
                                        </h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-decoration-none mb-3">
                                <a href="@Url.Action("GecikenKitaplar", "Rapor")" class="text-decoration-none">
                                    <div class="card-body bg-warning text-white rounded">
                                        <h5 class="card-title">
                                            <i class="bi bi-exclamation-triangle me-2"></i>Geciken Kitaplar
                                        </h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-decoration-none mb-3">
                                <a href="@Url.Action("OduncVerilenKitaplar", "Rapor")" class="text-decoration-none">
                                    <div class="card-body bg-info text-white rounded">
                                        <h5 class="card-title">
                                            <i class="bi bi-book me-2"></i>Ödünç Verilen Kitaplar
                                        </h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
