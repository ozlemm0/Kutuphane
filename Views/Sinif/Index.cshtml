@model IEnumerable<Kutuphane.Models.Sinif>

@{
    ViewData["Title"] = "Sınıflar";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Sınıflar</h1>

    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Hata"]
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Sınıf Listesi</h6>
            <a asp-action="Ekle" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Yeni Sınıf Ekle
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sınıf Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SinifAdi</td>
                                <td>
                                    <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>
                                    <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });
        });
    </script>
}