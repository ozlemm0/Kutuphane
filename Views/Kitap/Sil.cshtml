@model Kutuphane.Models.Kitap

@{
    ViewData["Title"] = "Kitap Silme Onayı";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Kitap Silme Onayı</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Kitap Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5>Bu kitabı silmek istediğinizden emin misiniz?</h5>
                <p>Bu işlem geri alınamaz ve kitaba ait tüm ödünç kayıtları etkilenecektir.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-2">Kitap Adı</dt>
                <dd class="col-sm-10">@Model.KitapAdi</dd>

                <dt class="col-sm-2">Yazar</dt>
                <dd class="col-sm-10">@Model.Yazar</dd>

                <dt class="col-sm-2">Yayınevi</dt>
                <dd class="col-sm-10">@Model.Yayinevi</dd>

                <dt class="col-sm-2">Kategori</dt>
                <dd class="col-sm-10">@Model.Kategori?.KategoriAdi</dd>

                @if (Model.OduncKitaplar != null && Model.OduncKitaplar.Any())
                {
                    <dt class="col-sm-2">Ödünç Kayıt Sayısı</dt>
                    <dd class="col-sm-10">@Model.OduncKitaplar.Count</dd>
                }
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>
            </form>
        </div>
    </div>
</div> 